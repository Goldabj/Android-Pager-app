<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    app:cardBackgroundColor="@color/colorPurplePrimary"
    app:cardElevation="2dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/groupRowNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/group"
            android:textColor="@color/colorFontLightGray"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/groupRowAddressText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/groupRowNameText"
            android:layout_marginLeft="15dp"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/groupAddress"
            android:textColor="@color/colorFontLightGray"
            android:textSize="20sp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>